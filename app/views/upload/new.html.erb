<div class="col-md-4 col-md-offset-4 thumbnail" style="padding: 20px;">
  <h1>Upload Image</h1>
  <br>
  <%= form_for @upload_image , html: { multipart: true } do |f| %>
  <% if @upload != '' && @upload.errors.any? %>
  <ul class="text-danger">
    <% @upload.errors.each do |msg| %>
    <li><%= msg %>: <%= @upload.errors[msg][0] %></li>
    <% end %>
  </ul>
  <% end %>
  <div class="field form-group">
    <label>Album</label>
    <select class="form-control" name="old_album">
      <option value="">Select Album</option>
      <%= @albums.each do |album| %>
      <option value="<%= album.id %>"><%= album.name %></option>
      <% end %>
    </select>
  </div>
  <div class="text-center">OR</div>
  <div class="field form-group">
    <%= f.label :create_new_album %><br>
    <%= f.text_field :new_album, class: 'form-control'%>
  </div>
  <hr>
  <div class="field form-group">
    <%= f.label :image_name %><br>
    <%= f.text_field :name, class: 'form-control'%>
  </div>
  <div class="field form-group">
    <%= f.label :select_image %><br>
    <%= f.file_field :attachment%>
  </div>
  <div class="actions from-group">
    <%= f.submit 'Upload', class: 'btn btn-primary'%>
  </div>
  <% end %>
</div>
